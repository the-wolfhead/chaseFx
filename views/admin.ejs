<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>
        /* Common styles */
        body {
            font-family: Arial, sans-serif;
            transition: background-color 0.5s ease;
        }

        h1 {
            color: #333;
        }

        .user-card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .user-profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

        /* Light mode */
        body.light-mode {
            background-color: #f5f5f5;
        }

        /* Dark mode */
        body.dark-mode {
            background-color: #333;
            color: #fff;
        }

        .user-card.dark-mode {
            background-color: #444;
            border-color: #555;
            color: #fff;
        }

        /* Toggle button styles */
        .toggle-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: transparent;
            border: none;
            cursor: pointer;
            z-index: 999;
        }

        .toggle-btn i {
            font-size: 24px;
        }
    </style>
</head>
<body class="<%= mode %>">
    <h1>Admin Panel</h1>
    <button class="toggle-btn" onclick="toggleMode()">
        <i class="fas fa-sun"></i>
        <i class="fas fa-moon"></i>
    </button>
    <a href="/admin/users">Manage Users</a>
    <h1>Users</h1>
    <div class="user-list">
        <% obj.forEach(function(obj) { %>
            <div class="user-card">
                <p><strong>Name:</strong> <%= obj.fname %></p>
                <p><strong>Email:</strong> <%= obj.email %></p>
                <p><strong>Balance:</strong> <%= obj.balance %></p>
                <p><strong>Account Type:</strong> <%= obj.account %></p>
                <p><strong>Country:</strong> <%= obj.country %></p>
            </div>
        <% }); %>
    </div>

    <!-- JavaScript to toggle mode -->
    <script>
        function toggleMode() {
            document.body.classList.toggle('light-mode');
            document.body.classList.toggle('dark-mode');
        }
    </script>
</body>
</html>

