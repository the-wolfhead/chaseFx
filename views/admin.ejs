<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Font Awesome CDN for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* Light mode */
        .light-mode {
            background-color: #ffffff;
            color: #333333; /* Adjust text color for light mode */
        }

        /* Dark mode */
        .dark-mode {
            background-color: #333333;
            color: #ffffff; /* Adjust text color for dark mode */
        }

        .container {
            margin: 0 auto;
            max-width: 800px;
            padding: 20px;
        }

        .user-card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .user-profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

        .toggle-btn {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 24px;
            color: #333333; /* Default color */
        }

        .edit-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .edit-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body class="<%= mode %>">
    <div class="container">
        <h1>Admin Panel</h1>
        <!-- Toggle button for light/dark mode -->
        <button class="toggle-btn" onclick="toggleMode()">
            <% if (mode === 'light-mode') { %>
                <i class="fas fa-moon"></i> <!-- Moon icon for dark mode -->
            <% } else { %>
                <i class="fas fa-sun"></i> <!-- Sun icon for light mode -->
            <% } %>
        </button>
        <a href="/admin/users">Manage Users</a>
        <h2>Users</h2>
        <div class="user-list">
            <% obj.forEach(function(obj) { %>
                <div class="user-card">
                    <img src="img/content/download (1).png" alt="Profile Picture" class="user-profile-pic">
                    <p>Name: <%= obj.fname %></p>
                    <p>Email: <%= obj.email %></p>
                    <p>Balance: <%= obj.balance %></p>
                    <p>Account Type: <%= obj.account %></p>
                    <p>Country: <%= obj.country %></p>
                    <!-- Add more user details here -->
                    <button class="edit-button" onclick="window.location.href='/admin/edit/<%= obj.id %>'">Edit</button>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Script for toggling light/dark mode -->
    <script>
        function toggleMode() {
            const body = document.body;
            body.classList.toggle('light-mode');
            body.classList.toggle('dark-mode');
        }
    </script>
</body>
</html>
